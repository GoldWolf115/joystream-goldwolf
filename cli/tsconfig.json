{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "types" : [ "node" ],
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "@polkadot/types-augment": ["../types/augment/augment-types.d.ts"],
      "@polkadot/api-augment": ["../types/augment/augment-api.d.ts"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
