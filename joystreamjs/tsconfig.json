{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "CommonJS",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],
    "noUnusedLocals": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "typesRoot": ["./typings"],

  "include": ["src/**/*"]
}
